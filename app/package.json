{
  "name": "tablica-ewcia",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n server,client -c red,blue \"npm run dev-server\" \"npm run dev-client\"",
    "dev-server": "tsx watch ./src/server/server.ts",
    "dev-client": "vite dev",
    "build": "vite build",
    "start": "concurrently \"node dist-server/server.js\" \"serve -s dist -l 3000\"",
    "build-server": "tsx ./src/server/server.ts",
    "build-all": "npm run build && tsc -p tsconfig.server.json"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/websocket": "^10.0.1",
    "@tldraw/sync": "^4.3.1",
    "@tldraw/sync-core": "^4.3.1",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "better-sqlite3": "^11.8.1",
    "concurrently": "^9.1.2",
    "fastify": "^4.28.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serve": "^14.2.4",
    "tldraw": "^4.3.1",
    "unfurl.js": "^6.4.0",
    "vite": "^5.4.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.18.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
