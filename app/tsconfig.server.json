{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "./dist-server",
        "rootDir": "./src/server",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/server"
    ],
    "exclude": [
        "node_modules"
    ]
}